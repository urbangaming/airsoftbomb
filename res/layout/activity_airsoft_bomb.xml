<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.urbangaming.airsoftbomb.AirsoftBombActivity"
    tools:ignore="MergeRootFrame" >

    <ImageButton
        android:id="@+id/greenbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/greenbutton"
        android:src="@drawable/green_button_selector" />

    <ImageButton
        android:id="@+id/redbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/greenbutton"
        android:layout_marginRight="33dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/redbutton"
        android:src="@drawable/red_button_selector" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messagex"
        android:layout_alignLeft="@+id/greenbutton"
        android:layout_marginBottom="18dp"
        android:background="@drawable/omnitool_message"
        android:gravity="center"
        android:maxLines="1"
        android:minEms="5"
        android:minLines="1"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:text="@string/countdown_init"
        android:textAlignment="center"
        android:textSize="33sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/messagex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/countdown"
        android:layout_centerVertical="true"
        android:background="@drawable/omnitool_message"
        android:minEms="10"
        android:minLines="5"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:text="@string/message_init"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

</RelativeLayout>