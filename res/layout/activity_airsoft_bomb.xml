<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.urbangaming.airsoftbomb.AirsoftBombActivity"
    tools:ignore="MergeRootFrame" >

    <ImageButton
        android:id="@+id/greenbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="30dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/greenbutton"
        android:src="@drawable/green_button_selector" />

    <ImageButton
        android:id="@+id/redbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/greenbutton"
        android:layout_marginRight="33dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/redbutton"
        android:src="@drawable/red_button_selector" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/omnitool_message"
        android:minEms="12"
        android:minLines="10"
        android:text="Testovaci text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="monospace"
         android:paddingLeft="10dp"
     android:paddingRight="10dp"
     android:paddingBottom="20dp"
     android:paddingTop="20dp" />

</RelativeLayout>